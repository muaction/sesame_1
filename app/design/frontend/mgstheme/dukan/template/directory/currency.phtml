/**
 * Currency switcher
 *
 * @see Mage_Directory_Block_Currency
 */
?>
<?php if($this->getCurrencyCount()>1): ?>
<div class="form-currency">
	<?php if(Mage::getStoreConfig('mgs_theme/general/header') == 'header' || Mage::getStoreConfig('mgs_theme/general/header') == 'header2' || Mage::getStoreConfig('mgs_theme/general/header') == 'header5'): ?>
		<ul class="hidden-sm hidden-xs">
			<?php foreach ($this->getCurrencies() as $_code => $_name): ?>
				<li <?php if(Mage::app()->getStore()->getCurrentCurrencyCode() == $_code): ?> class="active" <?php endif ?> role="presentation"><a role="menuitem" tabindex="-1" href="<?php echo $this->getSwitchCurrencyUrl($_code) ?>"><?php echo $_code ?></a></li>
			<?php endforeach; ?>
		</ul>
		<div class="dropdown-currency hidden-md hidden-lg">
			<button class="dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown">
				<i class="fa fa-angle-down"></i>
				<?php foreach ($this->getCurrencies() as $_code => $_name): ?>
					<?php if($_code==$this->getCurrentCurrencyCode()): ?>
							<span class="dropdown-toggles"><?php echo $_code ?></span>
					<?php endif;?>
				<?php endforeach; ?>
			</button>
			<ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu2">
				<?php foreach ($this->getCurrencies() as $_code => $_name): ?>
					<li role="presentation"><a role="menuitem" tabindex="-1" href="<?php echo $this->getSwitchCurrencyUrl($_code) ?>"><?php echo $_code ?></a></li>
				<?php endforeach; ?>
			</ul>
		</div>
	<?php else: ?>
		<button class="dropdown-toggle" type="button" data-toggle="dropdown">
			<?php foreach ($this->getCurrencies() as $_code => $_name): ?>
				<?php if($_code==$this->getCurrentCurrencyCode()): ?>
					<?php if(Mage::getStoreConfig('mgs_theme/general/header') == 'header7'): ?>
						<span><?php echo Mage::app()->getLocale()->currency($_code)->getSymbol();?></span>
					<?php else: ?>
						<span class="text"><?php echo $this->__('Currency: '); ?></span><span class="color-custom"><?php echo Mage::app()->getLocale()->currency($_code)->getSymbol();?> <?php echo $_code ?></span>
						<i class="fa fa-angle-down"></i>
					<?php endif; ?>
				<?php endif;?>
			<?php endforeach; ?>
		</button>
		<ul class="dropdown-menu" role="menu">
			<?php foreach ($this->getCurrencies() as $_code => $_name): ?>
				<li role="presentation"><a role="menuitem" tabindex="-1" href="<?php echo $this->getSwitchCurrencyUrl($_code) ?>"><?php echo Mage::app()->getLocale()->currency($_code)->getSymbol();?> <?php echo $_code ?></a></li>
			<?php endforeach; ?>
		</ul>
	<?php endif ?>
</div>
<?php endif; ?>
