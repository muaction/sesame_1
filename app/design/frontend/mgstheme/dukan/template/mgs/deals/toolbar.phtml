<?php
/**
 * Product list toolbar
 *
 * @see Mage_Catalog_Block_Product_List_Toolbar
 */
?>
<?php if($this->getCollection()->getSize()): ?>
<div class="toolbar">
    <div class="pager">
		<div class="limiter">
			<?php echo $this->__('Show') ?>
			<select name="select1" tabindex="1"  onchange="setLocation(this.value)">
			<?php foreach ($this->getAvailableLimit() as  $_key=>$_limit): ?>
				<option value="<?php echo $this->getLimitUrl($_key) ?>"<?php if($this->isLimitCurrent($_key)): ?> selected="selected"<?php endif ?>>
					<?php echo $_limit ?>
				</option>
			<?php endforeach; ?>
			</select>
			<?php echo $this->__('per page') ?>
		</div>
		<div class="sort-by">
			<?php echo $this->__('Sort By') ?>
			<select name="select2" tabindex="2" onchange="setLocation(this.value)">
			<?php foreach($this->getAvailableOrders() as $_key=>$_order): ?>
				 <option value="<?php echo $this->getOrderUrl($_key, 'asc') ?>"<?php if($this->isOrderCurrent($_key)): ?> selected="selected"<?php endif; ?>>
					  <?php echo $this->__($_order) ?>
				 </option>
			<?php endforeach; ?>
			</select>
			<?php if($this->getCurrentDirection() == 'desc'): ?>
				<a href="<?php echo $this->getOrderUrl(null, 'asc') ?>" title="<?php echo $this->__('Set Ascending Direction') ?>"><i class="fa fa-arrow-up"></i></a>
			<?php else: ?>
				<a href="<?php echo $this->getOrderUrl(null, 'desc') ?>" title="<?php echo $this->__('Set Descending Direction') ?>"><i class="fa fa-arrow-down"></i></a>
			<?php endif; ?>
		</div>
		<?php if( $this->isEnabledViewSwitcher() ): ?>
			<div class="view-mode pull-right">
				<?php echo $this->__('View As') ?>
				<?php $_modes = $this->getModes(); ?>
				<?php if($_modes && count($_modes)>1): ?>
				<?php foreach ($this->getModes() as $_code=>$_label): ?>
					<?php if($this->getMode()==$_code): ?>
						<strong title="<?php echo $_label ?>" class="view-type <?php echo strtolower($_code); ?>">
							<?php if($_label == "Grid"): ?>
								<i class="fa fa-th-large"></i>
							<?php else: ?>
								<i class="fa fa-th-list"></i>
							<?php endif; ?>
						</strong>&nbsp;
					<?php else: ?>
						<a href="<?php echo $this->getModeUrl($_code) ?>" title="<?php echo $_label ?>" class="view-type <?php echo strtolower($_code); ?>">
							<?php if($_label == "Grid"): ?>
								<i class="fa fa-th-large"></i>
							<?php else: ?>
								<i class="fa fa-th-list"></i>
							<?php endif; ?>
						</a>&nbsp;
					<?php endif ?>
				<?php endforeach; ?>
				<?php endif; ?>
			</div>    
		<?php endif; ?>
    </div>
</div>
<?php echo $this->getPagerHtml() ?>
<?php endif ?>
<script type="text/javascript">
	var mgsjQuery =jQuery.noConflict();
	mgsjQuery(document).ready(function() {
		mgsjQuery("select.custom").selectbox();
	});
</script>